{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "phpolar/authenticator",
    "description": "Supports authentication interoperability.",
    "type": "library",
    "require-dev": {
        "ext-ast": "*",
        "ext-openssl": "*",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
          "Phpolar\\Authenticator\\": "src/"
        }
    },
    "require": {
        "php": ">=8"
    },
    "license": "MIT",
    "scripts": {
        "ci:lint": "composer exec \"@lint\"",
        "ci:lint-fix": "composer exec \"@lint-fix\"",
        "ci:generate-coverage-badge": "composer exec \"php-coveralls -v\"",
        "lint": "phpcs",
        "lint-fix": "phpcbf"
    }
}
